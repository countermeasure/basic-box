alias b='bandwhich'

alias c='clear -x'
alias cp='cp --archive --interactive --verbose'

alias delta='delta --line-numbers --navigate'
alias df='df --si --total'
alias diff='printf "\nPrefer delta to diff.\n\n"'

alias f='ranger'  # "f" for "file manager".
alias fd='fd --exclude .git --follow --hidden'
alias find='printf "\nPrefer fd to find.\n\n"'

# For completions to work with Git aliases, the Git completions file must be
# sourced before the aliases are associated with the corresponding completions.
source /usr/share/bash-completion/completions/git

alias g='git'
__git_complete g __git_main
alias ga='git_add_then_git_status'
__git_complete ga _git_add
alias gad='git_add_then_git_diff'
__git_complete gad _git_add
alias gap='git add --patch'
__git_complete gap _git_add
GIT_BRANCH_FORMAT="\
%(if)%(HEAD)%(then)%(color:bold green)\
%(else)%(color:yellow)\
%(end)\
%(align:width=30)%(refname:short)%(HEAD)%(color:reset)%(end) \
%(color:dim white)Last commit%(color:reset) %(committerdate:relative)\
%(color:dim white) by%(color:reset) %(authorname)\
%(if)%(upstream)%(then)\
%(if:equals==)%(upstream:trackshort)%(then) %(color:bold green)(synced)\
%(else)\
%(if:equals=<)%(upstream:trackshort)%(then) %(color:bold yellow)\
%(else) \
%(color:bold red)%(end)(%(upstream:track,nobracket))\
%(end)\
%(end)"
alias gb="git branch --format=\"$GIT_BRANCH_FORMAT\""
__git_complete gb _git_branch
alias gba="git branch --all --format=\"$GIT_BRANCH_FORMAT\""
__git_complete gba _git_branch
alias gbr="git branch --format=\"$GIT_BRANCH_FORMAT\" --remote"
__git_complete gbr _git_branch
alias gch='git_checkout_then_git_status'
__git_complete gch _git_checkout
alias gco='git commit'
__git_complete gco _git_commit
alias gcoa='git commit --amend'
alias gcoar='git commit --amend --reuse-message=HEAD'
alias gcoc='git_commit_checkpoint'
alias gcof='git commit --fixup'
__git_complete gcof _git_commit
alias gcp='git cherry-pick'
__git_complete gcp _git_cherry_pick
alias gd='git diff'
__git_complete gd _git_diff
alias gds='git diff --staged'
__git_complete gds _git_diff
alias gf='git fetch'
__git_complete gf _git_fetch
alias gfa='git fetch --all'
__git_complete gfa _git_fetch
alias gfap='git fetch --all --prune'
__git_complete gfap _git_fetch
alias gk='gitk &'
alias gl='git log'
__git_complete gl _git_log
alias glg='git log --all --graph'
__git_complete glg _git_log
# "gls" for "git log short".
alias gls='git log --max-count=20'
__git_complete gls _git_log
alias gm='git merge'
__git_complete gm _git_merge
alias gp='git push'
__git_complete gp _git_push
alias gpoh='git push origin HEAD'
__git_complete gpoh _git_push
alias gr='git_rebase_then_git_status'
__git_complete gr _git_rebase
alias gra='git rebase --abort'
alias grc='git rebase --continue'
alias gri='git_rebase_interactive'
__git_complete gri _git_rebase
alias gria='git_rebase_interactive_with_autosquash'
__git_complete gria _git_rebase
alias grsh='git reset HEAD'
__git_complete grsh _git_reset
alias gs='git status'
__git_complete gs _git_status
alias gsh='git show'
__git_complete gsh _git_show

# "l" for "list".
alias l='exa --colour-scale --group-directories-first --long'
# "la" for "list all".
alias la='exa --all --colour-scale --group-directories-first --long'
alias less='less --HILITE-UNREAD --ignore-case --LONG-PROMPT --QUIET'
alias ln='ln --interactive --verbose'
alias ls='printf "\nPrefer l to ls.\n\n"'

alias mkdir='mkdir --parents --verbose'
alias mv='mv --interactive --verbose'

alias ncdu='ncdu --color dark -r --si'

alias p='ipython --no-confirm-exit'
alias ping='ping -c 5 -i 0.2'
alias pip='only_allow_pip_in_virtualenvs'
alias pip3='only_allow_pip3_in_virtualenvs'

alias r='reset'
alias rg="rg --glob '!.git' --hidden --smart-case"
alias rm='printf "\nPrefer t to rm.\n\n"'
alias rmdir='rmdir --verbose'

alias t='trash'

# "x" for "extract".
alias x='aunpack --each --quiet --subdir'

# ".." for "parent directory".
alias ..='go_to_parent_directory'
